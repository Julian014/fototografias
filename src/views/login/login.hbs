<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HIDRAULIBOMBAS</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="manifest" href="/manifest.json">
</head>
<body class="background-image">

<form action="/login" method="POST" class="form">
    <div class="form-group">
        <label for="email">CORREO ELECTRONICO:</label>
        <input name="email" type="email" id="email" placeholder="Enter your email" class="input-field" required>
    </div>

    <div class="form-group relative">
        <label for="password">CONTRASEÑA:</label>
        <input name="password" type="password" id="password" placeholder="Enter your password" class="input-field pr-10" required>
        <i id="togglePassword" class="fas fa-eye absolute right-3 top-3 cursor-pointer text-gray-500"></i>
    </div>

    <button type="submit" class="login-button">LOGIN</button>

    <div class="signup-link mt-4">
        <p>Don't have an account? <a href="#">Sign up now</a></p>
    </div>
</form>

  <script>
    // Código para el toggle de visibilidad de la contraseña
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('password');

    togglePassword.addEventListener('click', function() {
      const type = passwordInput.type === 'password' ? 'text' : 'password';
      passwordInput.type = type;
      this.classList.toggle('fa-eye-slash');
    });
  </script>
</body>
</html>
