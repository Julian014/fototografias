        }
        .info-section input {
            width: 150px;
            font-size: 10px;
            margin-left: 5px;
            padding: 2px;
            border: 1px solid #ccc;
        }
        .registro-container {
            text-align: center;
            margin-bottom: 10px;
        }
        .table-container {
            overflow-x: auto;
        }
        .combined-table {
            border-collapse: collapse;
            width: 100%;
            font-size: 10px;
        }
        .combined-table th, .combined-table td {
            border: 0.5px solid #000;
            padding: 1px;
            text-align: left;
        }
        .header {
            background-color: #6da8d6;
            color: white;
        }
        .input-field {
            width: 25px;
            text-align: left;
            border: none;
            background-color: #f0f0f0;
            font-size: 10px;
            margin: 0;
            padding: 0;
        }
        .hidrosistema-input {
            width: 50px;
            text-align: left;
        }
        h2 {
            font-size: 14px;
            margin: 10px 0;
        }
    </style>
</head>
